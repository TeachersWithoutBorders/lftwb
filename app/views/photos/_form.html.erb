<div id="upload_a_photo">
  <h2><%= _('Upload A Photo') %></h2>

  <% less_form_for [@user, @photo], :html => {:multipart=>true} do |f| %>
  	<%= f.wrap(:image, :label => _('Photo: ')) { f.file_field :image, :size => 15 } %>
  	<%= f.text_area :caption %>
	
  	<div class="row button">
    	<%= f.submit _('Upload Photo'), :class=>"button" %>
  	</div>
  <% end %>

  <div class="clear"></div>
</div>